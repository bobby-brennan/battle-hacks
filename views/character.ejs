<html>
<script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
<style>
.card {
    width: 400px;
    height: 200px;
    display: inline-block;
    background-color: #fafafa;
    box-shadow: #ddd 2px 2px 2px;
    border-radius: 2px;
    border: 1px solid #ccc;
    padding: 10px;
    margin: 10px 8px;
    position: relative;
}
.title {
    margin-bottom: 10px;
}
body {
  font-family: Open Sans;   
}
.notification {
  position: absolute;
  top: -10px;
  right: -10px;
  border-radius: 10px;
  width: 20px;
  height: 20px;
  background: #f22;
  text-align: center;
  cursor: pointer;
}
.notification_info {
    display: none
}
.notification:hover .notification_info {
    display: block;
    position: absolute;
    opacity: 1.0;
    background: #fafafa;
    border: 1px solid #ccc;
    top: 10px;
    right: 0px;
    width: 100px;
    height: auto;
}
.icon.purchased {
    opacity: 1.0;
    background: yellow;
}
.icon_container {
       text-align: center;
}
.icon {
    display: inline-block;
    margin-right: 3px;
    width: 80px;
    height: 80px;
    border: 1px solid #eee;
    border-radius: 40px;
    padding-top: 10px;
    opacity: 0.5;
    text-align: center;
    vertical-align: middle;
    background: white;
}

.icon img {
    width: 60px;
    height: 60px; 
}
.person {
    background-color: #fafafa;
    box-shadow: #ddd 2px 2px 2px;
    border-radius: 2px;
    border: 1px solid #ccc;
    padding: 10px;
    width: 100%;
    height: 300px;
    margin-bottom: 10px;
}

body {
  margin: 0px;
}

.avatar {
  height: 100%;
  display: inline-block;
}
.avatar img{ 
  height: 100%;
}
.facts {
  padding: 20px;
  height: 100%;
  display: inline-block;
}
.avatar_bubble {
        position: absolute;
        top: 0px;
        left: 250px;
        border-radius: 4px;
}
.bubble {
       width: 150px;
       height: 150px;
}
.want {
       position: relative;
       top: -50px;
       left: -120px;
       width: 80px;
       height: 80px;
}
.icon:hover {
  opacity: 1.0;
}
</style>
<script>
var purchasedItems = <%- items %>;

$(document).ready(function() {
console.log("ready!");
$(".icon").each(function(idx) {
  console.log("index:" + idx);
  $(this).click(function() {
    console.log("click:" + idx);
    purchaseItem(this, idx);
  });
});

$(".icon").each(function(idx) {
  if (purchasedItems[idx]) {
    $(this).addClass("purchased");
  }
});

$(".icon img").click(function(){console.log("c");});
})

var purchaseItem = function(elem, itemId) {
  $(elem).addClass('purchased');
  var xhr = new XMLHttpRequest();
  xhr.open("POST", "/penpal/purchaseItem");
  xhr.setRequestHeader('Content-Type', 'application/json');
  xhr.send(JSON.stringify({
    number: <%= number %>,
    itemId: itemId
  }));
}

</script>

<body>
<div class="person">
  <div class="avatar"><img src="/penpal/res/icon_11856.png">
  </div>
